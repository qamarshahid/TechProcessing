# Backend Environment Setup
# Copy this file to .env (project root) and fill with strong secrets. Do not commit .env.

# Frontend
VITE_API_URL=http://localhost:8081/api

# Backend Database (local Postgres via docker-compose)
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=techprocessing
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=change_me

# Database SSL (use false for local/docker, true when required by provider)
DATABASE_SSL=false
DATABASE_SSL_REJECT_UNAUTHORIZED=false

# JWT auth
JWT_SECRET=change_me_to_a_long_random_string
JWT_EXPIRES_IN=24h

# Server
PORT=8081
NODE_ENV=development

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Authorize.Net (optional)
AUTHORIZENET_API_LOGIN_ID=
AUTHORIZENET_TRANSACTION_KEY=
AUTHORIZENET_ENVIRONMENT=sandbox

# Email (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Cloud SQL (optional for local proxy mode)
# INSTANCE_CONNECTION_NAME=project:region:instance
# Absolute path to your credentials JSON on host (avoid storing in repo)
# GOOGLE_APPLICATION_CREDENTIALS_HOST_PATH=/abs/path/to/key.json